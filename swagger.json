{
  "swagger": "2.0",
  "host": "localhost:8000",
  "schemes": [
    "http",
    "https"
  ],
  "info": {
    "title": "Battleship API",
    "version": "0.0.1"
  },
  "paths": {
    "/boards/playerA": {
      "get": {
        "description": "Show player A's board",
        "responses": {
          "200": {
            "description": "Returns player A's board at the current state",
            "schema": {
              "$ref": "#/definitions/Board"
            }
          }
        }
      },
      "put": {
        "description": "Change the whole board of player A",
        "parameters": [
          {
            "name": "new board",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Board"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns new board of player A",
            "schema": {
              "$ref": "#/definitions/Board"
            }
          }
        }
      }
    },
    "/boards/playerB": {
      "get": {
        "description": "Show player B's board",
        "responses": {
          "200": {
            "description": "Returns player B's board at the current state",
            "schema": {
              "$ref": "#/definitions/Board"
            }
          }
        }
      },
      "put": {
        "description": "Change the whole board of player B",
        "parameters": [
          {
            "name": "new board",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Board"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns new board of player B",
            "schema": {
              "$ref": "#/definitions/Board"
            }
          }
        }
      }
    },
    "/boards/playerA/shoot": {
      "post": {
        "description": "Shoot at the cell at position x:y on player A's board",
        "parameters": [
          {
            "name": "coordinates",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "x": {
                  "type": "integer"
                },
                "y": {
                  "type": "integer"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return whether shot hit or missed",
            "schema": {
              "type": "object",
              "properties": {
                "hit": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    },
    "/boards/playerB/shoot": {
      "post": {
        "description": "Shoot at the cell at position x:y on player B's board",
        "parameters": [
          {
            "name": "coordinates",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "x": {
                  "type": "integer"
                },
                "y": {
                  "type": "integer"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Return whether shot hit or missed",
            "schema": {
              "type": "object",
              "properties": {
                "hit": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Board": {
      "type": "array",
      "minItems": 10,
      "maxItems": 10,
      "items": {
        "type": "array",
        "minItems": 10,
        "maxItems": 10,
        "items": {
          "type": "integer"
        }
      }
    }
  }
}
